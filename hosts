# /home/ansible/hosts

[all]
node1 ansible_user=ansible ansible_python_interpreter=/usr/bin/python3
node2 ansible_user=ansible ansible_python_interpreter=/usr/bin/python3
node3 ansible_user=ansible ansible_python_interpreter=/usr/bin/python3

[webservers]
node1 ansible_user=ansible ansible_python_interpreter=/usr/bin/python3
node2 ansible_user=ansible ansible_python_interpreter=/usr/bin/python3

[db]
node3 ansible_user=ansible ansible_python_interpreter=/usr/bin/python3

[network]
node1 ansible_user=ansible ansible_python_interpreter=/usr/bin/python3
node2 ansible_user=ansible ansible_python_interpreter=/usr/bin/python3
controller ansible_host=172.18.0.2 ansible_user=ansible ansible_python_interpreter=/usr/bin/python3
